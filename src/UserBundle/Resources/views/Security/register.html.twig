{% extends "TodoBundle::layout.html.twig" %}

{% trans_default_domain 'signup' %}

{% block content %}
    <div class="container row">
        <section class="section valign-center">
            <h2>{{  "Inscription"|trans }}</h2>

            {{ form_start(form) }}

            {{ form_widget(form) }}
            <div>
                <button type="submit">
                    {{- 'signup.form.submit'|trans -}}
                </button>
            </div>
            {{ form_end(form) }}
        </section>
    </div>

{% endblock %}