<div id="modal-new-task" class="modal">
    <div class="modal-content">
        <h4>{% trans %}New task{% endtrans %}</h4>
        <p>
            {{ form_start(form) }}
                <div class="form-control">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-control">
                    {{ form_label(form.tempsPrevu) }}
                    {{ form_widget(form.tempsPrevu,{'attr':{'class':'materialize'}}) }}
                </div>
                <div class="form-control">
                    {{ form_label(form.projet) }}
                    {{ form_widget(form.projet,{'attr':{'class':'materialize'}}) }}
                </div>
                <div class="form-control">
                    {{ form_label(form.complexity) }}
                    {{ form_widget(form.complexity,{'attr':{'class':'materialize'}}) }}
                </div>
                <div class="form-control">
                    {{ form_label(form.tacheParentes) }}
                    {{ form_widget(form.tacheParentes,{'attr':{'class':'materialize'}}) }}
                </div>
            {{ form_end(form) }}
        </p>
    </div>
    <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>